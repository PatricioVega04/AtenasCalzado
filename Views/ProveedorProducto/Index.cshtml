@model IEnumerable<AtenasCalzado.Models.ProveedorProducto>

@{
    ViewData["Title"] = "";
}

<h1>Proveedor de Producro</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proveedores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.producto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proveedores.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
